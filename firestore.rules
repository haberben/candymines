rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function - Admin kontrolü
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function - Kullanıcının kendi verisi mi?
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Herkes kendi verisini okuyabilir
      allow read: if isOwner(userId);
      
      // Herkes kendi verisini oluşturabilir (kayıt)
      allow create: if isOwner(userId);
      
      // Herkes kendi verisini güncelleyebilir (ama role değiştiremez)
      allow update: if isOwner(userId) && 
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      
      // Sadece adminler tüm kullanıcıları okuyabilir
      allow read: if isAdmin();
      
      // Sadece adminler kullanıcı verilerini güncelleyebilir (coin verme, ban, role değiştirme)
      allow update: if isAdmin();
      
      // Sadece adminler kullanıcı silebilir
      allow delete: if isAdmin();
    }
    
    // Gifts collection
    match /gifts/{giftId} {
      // Herkes hediyeleri okuyabilir
      allow read: if true;
      
      // Sadece adminler hediye ekleyebilir/düzenleyebilir/silebilir
      allow create, update, delete: if isAdmin();
    }
    
    // Purchases collection
    match /purchases/{purchaseId} {
      // Kullanıcılar sadece kendi satın almalarını görebilir
      allow read: if isOwner(resource.data.userId);
      
      // Kullanıcılar satın alma kaydı oluşturabilir
      allow create: if isOwner(request.resource.data.userId);
      
      // Adminler tüm satın almaları görebilir
      allow read: if isAdmin();
    }
  }
}
